[Unit]
Description=Memos

StartLimitIntervalSec=200
StartLimitBurst=2

[Container]
ContainerName=memos
Image=docker.io/neosmemo/memos:stable
AutoUpdate=registry

# HealthCmd=curl http://127.0.0.1:3001
UserNS=auto

Network=homelab.network
IP=10.90.0.10

Volume=/opt/containers/data/%p:/var/opt/memos:Z,idmap

Timezone=local

[Service]
Restart=on-failure
TimeoutStartSec=30
TimeoutStopSec=30

ExecStartPre=mkdir -p /opt/containers/data/%p

[Install]
WantedBy=multi-user.target default.target
