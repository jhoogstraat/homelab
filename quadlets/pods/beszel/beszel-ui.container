[Unit]
Description=Beszel UI

StartLimitIntervalSec=200
StartLimitBurst=2

[Container]
ContainerName=beszel-ui

Image=docker.io/henrygd/beszel:latest
AutoUpdate=registry

Pod=beszel.pod

Volume=/opt/containers/data/beszel/data:/beszel_data:Z,idmap

Timezone=local

[Service]
Restart=on-failure
TimeoutStartSec=30
TimeoutStopSec=30

ExecStartPre=mkdir -p /opt/containers/data/beszel/data

[Install]
WantedBy=multi-user.target default.target
