[Unit]
Description=redis for paperless-ngx

[Container]
ContainerName=paperless-redis
Image=docker.io/library/redis:8
AutoUpdate=registry
Pod=paperless.pod

# User+Group of the host mapped on the pod
User=1500
Group=1500

Volume=%h/containers/storage/paperless/redis:/data:Z

Timezone=local

[Service]
Restart=always
TimeoutStartSec=500
ExecStartPre=mkdir -p %h/containers/storage/paperless/redis

[Install]
WantedBy=multi-user.target default.target
