[Unit]
Description=Beszel Agent

StartLimitIntervalSec=300
StartLimitBurst=2

[Container]
ContainerName=beszel-agent

Image=docker.io/henrygd/beszel-agent:latest
AutoUpdate=registry

Pod=beszel.pod

Environment=HUB_URL=http://localhost:8090
EnvironmentFile=%h/containers/secrets/beszel.env

Volume=%h/containers/storage/beszel/agent:/var/lib/beszel-agent:Z
Volume=${XDG_RUNTIME_DIR}/podman/podman.sock:${XDG_RUNTIME_DIR}/podman/podman.sock:ro

Timezone=local

[Service]
Restart=on-failure
TimeoutStartSec=60
TimeoutStopSec=60

ExecStartPre=mkdir -p %h/containers/storage/beszel/agent

[Install]
WantedBy=multi-user.target default.target
