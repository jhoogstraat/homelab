[Unit]
Description=Papra document management

[Container]
ContainerName=papra
Image=ghcr.io/papra-hq/papra:latest-rootless
AutoUpdate=registry

# HealthCmd=curl http://127.0.0.1:3001
UserNS=keep-id:uid=999,gid=999

Network=homelab.network
IP=10.90.0.11

Volume=%h/containers/storage/%N/data:/app/app-data:Z
Volume=%h/containers/storage/%N/ingestion:/app/ingestion:Z

EnvironmentFile=%h/containers/config/%N/papra.env
EnvironmentFile=%h/containers/secrets/%N.env

Timezone=local

[Service]
Restart=on-failure
TimeoutStartSec=300

ExecStartPre=mkdir -p %h/containers/storage/%N/data
ExecStartPre=mkdir -p %h/containers/storage/%N/ingestion

StartLimitInterval=300
StartLimitBurst=5

[Install]
WantedBy=multi-user.target default.target
