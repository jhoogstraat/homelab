[Unit]
Description=Caddy Reverse Proxy

[Container]
ContainerName=caddy
Image=localhost:5000/caddy:latest
AutoUpdate=registry

Exec=run --config /opt/caddy/conf/Caddyfile --adapter caddyfile --watch

# HealthCmd=curl http://127.0.0.1:3001
UserNS=keep-id:uid=65532,gid=65532

Network=homelab.network
IP=10.90.0.3
PublishPort=4443:443

Volume=%h/containers/storage/%N:/opt/caddy/work/caddy:Z
Volume=%h/containers/config/%N:/opt/caddy/conf:Z,ro

EnvironmentFile=%h/containers/secrets/%N.env

Environment=XDG_DATA_HOME=/opt/caddy/work

Timezone=local

[Service]
Restart=on-failure
TimeoutStartSec=300

ExecStartPre=mkdir -p %h/containers/storage/%N

StartLimitInterval=300
StartLimitBurst=5

[Install]
WantedBy=multi-user.target default.target
